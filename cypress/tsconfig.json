{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "dom",
    ],
    "types": [
      "cypress"
    ],
    "jsx": "preserve",
    "charset": "utf8",
    "allowJs": true,
    "declaration": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
